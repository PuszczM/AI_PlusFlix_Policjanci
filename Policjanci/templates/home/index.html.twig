{% extends 'base.html.twig' %}

{% block title %}PlusFlix ‚Äì Szukaj{% endblock %}

{% block body %}

<div class="home-wrapper">

    <!-- G≈Å√ìWNY TYTU≈Å -->
    <h1 class="home-title">Jakiego filmu szukasz?</h1>

    <!-- FORMULARZ WYSZUKIWANIA -->
    <form action="{{ path('app_search') }}" method="get" class="search-form">
        <input type="text" name="prompt" placeholder="Wyszukaj..." class="search-input">
        <button class="search-btn">üîç</button>
    </form>

    <!-- SERWISY -->
    <div class="service-label">Serwisy</div>

    <div class="service-icons">

        {% for service in availableServices %}
            <div class="service-item">
                <img src="{{ asset(service.logoPath) }}" alt="{{ service.fullName }}">
                <span>{{ service.fullName }}</span>
            </div>
        {% endfor %}

    </div>

<style>
.home-wrapper {
    text-align: center;
    padding-top: 60px;
}

.home-title {
    font-size: 32px;
    margin-bottom: 25px;
    font-weight: bold;
}

.search-form {
    width: 50%;
    margin: 0 auto;
    display: flex;
}

.search-input {
    width: 100%;
    padding: 12px;
    background: #000;
    border: 1px solid #555;
    color: white;
    font-size: 16px;
}

.search-btn {
    width: 60px;
    background: #333;
    border: 1px solid #555;
    border-left: none;
    color: white;
    cursor: pointer;
}

.search-btn:hover { background: #555; }

.service-label {
    margin-top: 15px;
    color: #ccc;
    font-size: 16px;
    text-align: center;
}

.service-icons {
    display: flex;
    justify-content: center;
    gap: 35px;
    margin-top: 20px;
}

.service-item {
    pointer-events: none; /* NIEKLlIKALNE */
}

.service-icons img {
    width: 70px;
    height: 70px;
    object-fit: contain;
    filter: brightness(1.1);
    transition: transform .2s;
    cursor: default !important; /* brak rƒÖczki */
}

.service-icons img:hover {
    transform: scale(1.15);
}
</style>


{% endblock %}
