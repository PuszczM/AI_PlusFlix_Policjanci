<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}PlusFlix{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/base.css') }}">
    {% endblock %}
</head>
<body>
<nav class="navbar">
    <a href="{{ path('app_home') }}" class="brand">PLUSFLIX</a>

    <div class="user-menu">
        <a href="#" class="btn quick-btn">ðŸ”¥ Popular</a>
        <a href="#" class="btn quick-btn">ðŸ†• New</a>

        {% if app.user %}
            <span class="user-info">Hello, <strong>{{ app.user.username }}</strong></span>

            <a href="{{ path('app_logout') }}" class="btn btn-logout">Log out</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-login">Log in</a>
        {% endif %}
    </div>
</nav>

{% for message in app.flashes('success') %}
    <div style="background: #2e7d32; color: white; padding: 10px; text-align: center;">{{ message }}</div>
{% endfor %}

{% block body %}{% endblock %}

{% block scripts %}{% endblock %}

</body>
</html>
