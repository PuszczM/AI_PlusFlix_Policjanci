<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}PlusFlix{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/base.css') }}">
    {% endblock %}
</head>
<body class="{% if app.user and 'ROLE_ADMIN' in app.user.roles %}has-admin-panel{% endif %}">
<nav class="navbar">
    <a href="{{ path('app_home') }}" class="brand">PLUSFLIX</a>

    <div class="user-menu">
        <a href="#" class="btn quick-btn">ğŸ”¥ Popular</a>
        <a href="#" class="btn quick-btn">ğŸ†• New</a>

        {% if app.user %}
            <span class="user-info">Hello, <strong>{{ app.user.username }}</strong></span>

            <a href="{{ path('app_logout') }}" class="btn btn-logout">Log out</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-login">Log in</a>
        {% endif %}
    </div>
</nav>

{% if app.user and 'ROLE_ADMIN' in app.user.roles %}
    <div class="admin-panel">
        <a href="{{ path('admin_add_movie') }}" class="admin-btn">â• Add Movie</a>
        <a href="{{ path('admin_manage_movies') }}" class="admin-btn">âœï¸ Edit Movies</a>
    </div>
{% endif %}

<div class="content-wrapper">
    {% for message in app.flashes('success') %}
        <div style="background: #2e7d32; color: white; padding: 10px; text-align: center;">
            {{ message }}
        </div>
    {% endfor %}

    {% block body %}{% endblock %}
</div>

{% block scripts %}{% endblock %}

</body>
</html>
