{% extends 'base.html.twig' %}

{% block title %}{{ movie.title }} ‚Äì PlusFlix{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/heart.css') }}">
    <style>
        .movie-page {
            display: flex;
            gap: 40px;
            padding: 30px;
        }
        .movie-left {
            width: 300px;
            position: relative;
        }
        .movie-cover {
            width: 100%;
            border-radius: 6px;
        }
        .rating-box {
            margin-top: 20px;
            background: #111;
            padding: 10px;
            border-radius: 6px;
            text-align: center;
        }
        .like-icon {
            font-size: 28px;
            cursor: pointer;
            margin-top: 10px;
        }
        .movie-right {
            flex-grow: 1;
        }
        .service-logo {
            width: 50px;
            margin-right: 10px;
            border-radius: 4px;
        }
        .comment-box {
            background: #111;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
        }

        .comment-box .form-group {
            margin-bottom: 15px;
        }

        .comment-box .form-control {
            width: 100%;
            padding: 8px;
            background: #222;
            border: 1px solid #444;
            border-radius: 4px;
            color: #fff;
        }

        .comment-box .radio-group {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .comment-box .radio-group label {
            color: #fff;
            font-weight: normal;
        }

        .comment-box .btn-submit {
            background: #e50914;
            color: #fff;
            padding: 8px 16px;
            border: none;
            cursor: pointer;
            border-radius: 4px;
            transition: background 0.2s;
        }

        .comment-box .btn-submit:hover {
            background: #b0060f;
        }


        /* Style for platforms */
        .services-row {
            display: flex;
            gap: 20px;
            margin: 15px 0;
            align-items: center;
        }

        .service-item {
            text-align: center;
            color: #ccc;
            font-size: 13px;
        }

        .service-logo {
            width: 60px;
            height: 60px;
            object-fit: contain;
            filter: brightness(1.1);
            transition: transform .2s;
        }

        .service-logo:hover {
            transform: scale(1.1);
        }

    </style>
{% endblock %}

{% block body %}

    <div class="movie-page">

        <div class="movie-left">
            <img src="{{ movie.posterPath ?? 'https://placehold.co/300x450' }}" class="movie-cover">

            <div class="heart" data-id="{{ movie.id }}">
                {% include 'icons/heart.svg' %}
            </div>

            <div class="rating-box">
                <strong>Rating {{ movie.score ?? '0' }}%</strong>

                <div class="like-icon" onclick="addLike({{ movie.id }})">
                    üëç
                </div>

                <span class="like-count" id="likes-{{ movie.id }}">0</span>
            </div>
        </div>

        <div class="movie-right">

            <h1>{{ movie.title }}</h1>

            <div class="movie-meta">
                Year of production: {{ movie.releaseYear }} |
                Genre:
                {% for cat in movie.categories %}
                    {{ cat.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </div>

            <hr>

            <h3>Description</h3>
            <p>{{ movie.description ?? 'No description.' }}</p>

            <h3>Production</h3>
            <p>{{ movie.country ?? 'No data' }}</p>

            <h3>Where to watch?</h3>

            {% if movie.services is empty %}
                <p>No information about available platforms.</p>
            {% else %}
                <div class="services-row">
                    {% for s in movie.services %}
                        <div class="service-item">
                            <img src="{{ asset(s.logoPath) }}" alt="{{ s.fullName }}" class="service-logo">

                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            <h3>Reviews</h3>

            <h3>Leave a review</h3>
            <div class="comment-box">
                {{ form_start(reviewForm) }}
                <div class="form-group">
                    {{ form_label(reviewForm.author) }}
                    {{ form_widget(reviewForm.author, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(reviewForm.author) }}
                </div>

                <div class="form-group">
                    {{ form_label(reviewForm.comment) }}
                    {{ form_widget(reviewForm.comment, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(reviewForm.comment) }}
                </div>

                <div class="form-group radio-group">
                    {{ form_label(reviewForm.positive) }}
                    {{ form_widget(reviewForm.positive) }}
                    {{ form_errors(reviewForm.positive) }}
                </div>

                <button type="submit" class="btn-submit">Add comment</button>
                {{ form_end(reviewForm) }}
            </div>

            <div id="comments-list" class="comments-section">
                {% if reviews is empty %}
                    <p id="no-comments">No reviews yet</p>
                {% else %}
                    {% for r in reviews %}
                        <div class="single-comment">
                            <div>
                                {% if r.username %}
                                    <strong>{{r.username}}</strong>
                                {% else %}
                                    <i>anonymous</i>
                                {% endif %}
                                {% if r.isPositive %}
                                    üëç
                                {% else %}
                                    üëé
                                {% endif %}
                            </div>
                            <div>
                                {{r.comment}}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('scripts/favorites.js') }}"
{% endblock %}
